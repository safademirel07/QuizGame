<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded6"
    android:paddingTop="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"

    tools:context="com.safademirel.quizgame.Activities.Correct">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layoutCorrect"
        android:visibility="invisible"
        >

        <TextView
            android:id="@+id/correctQuestion"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded1"
            android:gravity="center"
            android:padding="8dp"
            android:scrollbars="none"
            android:text="txtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestion"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded1"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/layoutCorrect2"
        >

        <TextView
            android:id="@+id/correctQuestion2"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center"
            android:padding="4dp"
            android:scrollbars="none"
            android:text="Aşağıdaki bitkinin adı nedir"
            android:textColor="@color/white" />
        <ImageView
            android:id="@+id/correctIv2"
            android:layout_width="match_parent"
            android:layout_below="@id/correctQuestion2"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher"
            android:gravity="center"
            android:clickable="true"
            android:padding="8dp"
            android:textColor="@color/white" />
    </RelativeLayout>

    <Button
        android:id="@+id/correctAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutCorrect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded3"
        android:fontFamily="roboto_condensed_bold_italic"
        android:text="SADASDASDSADSADSADASDSADAASADASDASDSADSADSADASDSADAA"
        android:textColor="@color/white"
        android:padding="8dp"

        android:textSize="13sp" />


    <Button
        android:id="@+id/closeCorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/correctAnswer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded1"
        android:layout_marginBottom="16dp"
        android:fontFamily="roboto_condensed_bold_italic"
        android:text="Kapat"
        android:textColor="@color/white"

        android:textSize="20sp" />





</RelativeLayout>
