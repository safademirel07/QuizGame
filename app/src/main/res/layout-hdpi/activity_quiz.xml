<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_safa"

    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/quizGame"
        android:background="@drawable/bg_safa"

        android:visibility="visible"
        android:layout_height="match_parent"
        tools:context="com.safademirel.quizgame.Activities.Quiz">

        <FrameLayout
            android:id="@+id/gps_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:weightSum="100"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/linerarQuizSafa">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="33">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SKOR"
                    android:textColor="#80ffffff"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:id="@+id/scoreValue"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="48dp"
                android:layout_gravity="left"
                android:background="#ffffff" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="33">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SÜRE"
                    android:textColor="#80ffffff"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/timesValue"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="48dp"
                android:layout_gravity="left"
                android:background="#ffffff" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="33">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Soru"
                    android:textColor="#80ffffff"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:id="@+id/leftQuestionValue"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:gravity="center_horizontal"/>
            </LinearLayout>



        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/digerLayoutSafa"
            android:layout_below="@+id/linerarQuizSafa">

            <TextView
                android:id="@+id/txtQuestion"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded6"
                android:gravity="center"
                android:padding="8dp"
                android:scrollbars="none"
                android:text="txtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestiontxtQuestion"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded6"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:visibility="gone"

            android:id="@+id/digerLayoutSafa2"
            android:layout_below="@+id/linerarQuizSafa">

            <TextView
                android:id="@+id/txtQuestion2"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center"
                android:paddingTop="4dp"
                android:scrollbars="none"
                android:text="Aşağıdaki bitkinin adı nedir"
                android:textColor="@color/white" />
            <ImageView
                android:id="@+id/ivSafa2"
                android:layout_width="match_parent"
                android:layout_below="@id/txtQuestion2"
                android:layout_height="90dp"
                android:src="@drawable/ic_launcher"
                android:gravity="center"
                android:clickable="true"
                android:padding="8dp"
                android:textColor="@color/white" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/digerLayoutSafa"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded3"
            android:drawableLeft="@drawable/a"
            android:drawablePadding="-35sp"
            android:fontFamily="roboto_condensed_bold_italic"
            android:text="SADASDASDSADSADSADASDSADAA"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnOne"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/rounded3"
            android:drawableLeft="@drawable/b"
            android:drawablePadding="-35sp"
            android:fontFamily="roboto_condensed_bold_italic"
            android:text="btnTwo"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnTwo"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/rounded3"
            android:drawableLeft="@drawable/c"
            android:drawablePadding="-35sp"
            android:fontFamily="roboto_condensed_bold_italic"
            android:text="btnThree"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnThree"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/rounded3"
            android:drawableLeft="@drawable/d"
            android:drawablePadding="-35sp"
            android:fontFamily="roboto_condensed_bold_italic"
            android:text="1212121"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:weightSum="100"

            android:layout_above="@+id/adViewQuiz"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            android:baselineAligned="false"
            android:id="@+id/linearLayout">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="33">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="%50"
                    android:textSize="22sp"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:id="@+id/tvFifty"
                    android:textColor="#80ffffff"
                    android:gravity="center_horizontal"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="33">

                <TextView
                    android:id="@+id/tvPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"

                    android:gravity="center_horizontal"
                    android:onClick="onClick"
                    android:text="Çift Cevap"
                    android:textColor="#80ffffff"

                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="33">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seyirciye Sor"
                    android:textSize="22sp"

                    android:id="@+id/tvAsk"
                    android:textColor="#80ffffff"
                    android:onClick="onClick"
                    android:clickable="true"

                    android:gravity="center_horizontal"/>

            </LinearLayout>




        </LinearLayout>



        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/bannerad2"
            android:layout_centerHorizontal="true">
        </com.google.android.gms.ads.AdView>

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/duringGame"
        android:background="@drawable/bg_safa"

        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/btnReport"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/info"
            />

        <ImageView
            android:id="@+id/logoDuringSafa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:layout_marginTop="48dp"
            android:src="@drawable/pass"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/tvScoreDuring"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="KAZANILAN SKOR: 5"
            android:drawableLeft="@drawable/ranking"
            android:drawablePadding="-25sp"


            android:background="@drawable/roundedc"
            android:layout_below="@+id/logoDuringSafa"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btnNextDuring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded3"
            android:drawableLeft="@drawable/next"

            android:drawablePadding="-35sp"
            android:text="Sonraki Soru"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_below="@+id/tvScoreDuring"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btnCevapOgren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded1"
            android:drawableLeft="@drawable/ogren"

            android:drawablePadding="-35sp"
            android:text="Cevabı Öğren"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_below="@+id/btnNextDuring"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</FrameLayout>
